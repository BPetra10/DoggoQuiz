<UserControl x:Class="Dogs.MyBtn.BoneButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dogs.MyBtn"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="39*"/>
			<RowDefinition Height="50*"/>
			<RowDefinition Height="44*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="59*"/>
			<ColumnDefinition Width="70*"/>
			<ColumnDefinition Width="69*"/>
		</Grid.ColumnDefinitions>
		<Image Source="bone.png" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
		<Viewbox Grid.Column="1" Grid.Row="1">
			<TextBlock Background="Transparent" Text="{Binding TextVal}"></TextBlock>
		</Viewbox>
	</Grid>
</UserControl>
